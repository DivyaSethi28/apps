<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My Nanaodegree Apps"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/spotify_streamer_btn"
        style="@style/AppTheme.AppBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/abc_alert_dialog_button_bar_height"
        android:text="@string/spotify_streamer"
        android:onClick="showToast"/>

    <Button
        android:id="@+id/scores_app_btn"
        style="@style/AppTheme.AppBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spotify_streamer_btn"
        android:text="@string/scores_app"
        android:onClick="showToast"/>

    <Button
        android:id="@+id/library_app_btn"
        style="@style/AppTheme.AppBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scores_app_btn"
        android:text="@string/library_app"
        android:onClick="showToast"/>

    <Button
        android:id="@+id/build_it_bigger_btn"
        style="@style/AppTheme.AppBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/library_app_btn"
        android:text="@string/build_it_bigger"
        android:onClick="showToast"/>

    <Button
        android:id="@+id/xyz_reader_btn"
        style="@style/AppTheme.AppBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/build_it_bigger_btn"
        android:background="@color/accent_material_dark"
        android:text="@string/xyz_reader"
        android:onClick="showToast"/>

    <Button
        android:id="@+id/capstone_my_own_app_btn"
        style="@style/Base.TextAppearance.AppCompat.CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xyz_reader_btn"
        android:text="@string/capstone_my_own_app"
        android:onClick="showToast"/>


</RelativeLayout>
